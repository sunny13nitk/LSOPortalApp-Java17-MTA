{
  "welcomeFile": "index.html",
  "authenticationMethod": "route",
  "routes": [
    {
      "source": "^/lso",
      "target": "/lso",
      "destination": "srv-api",
      "authenticationType": "xsuaa",
      "cacheControl": "no-cache, no-store, must-revalidate"
    },
    {
      "source": "^/post",
      "target": "/post",
      "destination": "srv-api",
      "authenticationType": "none"
    },
    {
      "source": "^/logout",
      "target": "/logout",
      "destination": "srv-api",
      "authenticationType": "none"
    },
    {
      "source": "^/api",
      "target": "/api",
      "destination": "srv-api",
      "authenticationType": "xsuaa",
      "cacheControl": "no-cache, no-store, must-revalidate"
    },    
    {
      "source": "^/login(.*)",
      "target": "/login$1",
      "destination": "srv-api",
      "authenticationType": "xsuaa",
      "cacheControl": "no-cache, no-store, must-revalidate"
    }

  ]
}